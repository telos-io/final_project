
<h2>Sample Code</h2>
<div id="timer"></div>
<pre id="current-script">
<%#= render "code.json.erb" %>
</pre>

<form>
  <textarea class="script-input"></textarea>
</form>

<!--button class="btn btn-default submit myModal">Submit</button>-->

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg submit" data-toggle="modal" data-target="#modal">
Done!</button>

<div id="modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
   <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Code Race Results</h4>
      </div>
      <div class="modal-body">
        <p>Your Scores:</p>
        <p>Speed: <span id="wpm"></span></p>
        <p>Accuracy: <span id="errorCount"></span></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default dismiss" data-dismiss="modal">Once Again Into the Breach!</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Check Your Progress!</button>
      </div>
    </div>

  </div>
</div>
