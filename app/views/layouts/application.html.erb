<!DOCTYPE html>
<html>
<head>
  <title>Code Racer</title>
  <%= include_gon(:init => true) %>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <nav class="nav">
      <% if user_signed_in? %>
        <button class="btn btn-default"><%= link_to "Your Profile", user_path %></button>
        <div class="pull-right">
          <span>Hello <%= current_user.full_name %>,</span>
          <button class="btn btn-danger"><%= link_to "Logout", sessions_path, method: :delete,
                   data: {confirm: "are you sure you want to log out?"}%></button>
        </div>
      <% else %>
        <button class="btn btn-default"><%= link_to "Login", new_session_path %></button>
        <button class="btn btn-success"><%= link_to "Sign Up", new_user_path %></button>
      <% end %>
    </nav>
    <hr>
    <%= yield %>
    </div> <!--container-->
</body>
</html>
